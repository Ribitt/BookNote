<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/underline_green">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_essayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에세이 제목"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/myBlack"
            android:textStyle="bold"/>
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:tint="@color/border"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@drawable/underline_lightgrey"
        android:orientation="horizontal"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"

            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="님의 에세이"/>



    </LinearLayout>

<!--    최상단 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_lightgrey"
        android:gravity="right"
       android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:background="@drawable/empty_background"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/book_jieun" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="김지은입니다"
                    ></TextView>




                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="김지은"
                    android:textSize="13sp"
                    ></TextView>
                <TextView
                    android:id="@+id/tv_book_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="봄알람"
                    android:textSize="13sp"
                    ></TextView>

            </LinearLayout>





    </LinearLayout>

<!--    여기까지 책과 제목-->



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
    android:orientation="vertical">


        <TextView
            android:id="@+id/tv_essayContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="에세이 내용"
            android:maxLines="5"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
            android:ellipsize="end"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020.08.21"
        android:textColor="@color/border"
        android:background="@drawable/underline_lightgrey"
        android:gravity="right"
        android:textSize="12dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_like_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_empty_like"/>

        <TextView
            android:id="@+id/tv_likeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>




    </LinearLayout>



    </LinearLayout>