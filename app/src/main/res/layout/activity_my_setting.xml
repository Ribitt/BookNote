<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySetting"
    android:orientation="vertical">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
      />

    <LinearLayout
        android:id="@+id/btn_pageGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_underline"
        android:padding="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="독서 목표 페이지"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="10,000 페이지"/>

    </LinearLayout>




    <TextView
        android:id="@+id/btn_changeNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_lightgrey"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="닉네임 변경"/>

    <TextView
        android:id="@+id/btn_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_underline"

        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="비밀번호 변경"/>






    <TextView
        android:id="@+id/btn_logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_lightgrey"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/myRed"
        android:text="로그아웃"/>



    <TextView
        android:id="@+id/btn_signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_underline"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/myRed"
        android:text="회원탈퇴"/>


    <TextView
        android:id="@+id/btn_sendDevEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_lightgrey"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="개발자에게 문의하기"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_lightgrey"
        android:padding="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="독서노트 1.0"/>


</>