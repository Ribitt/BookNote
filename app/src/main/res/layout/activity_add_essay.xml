<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEssay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:background="@drawable/border_whole_lightgrey"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/button_yello"
            android:text="공개"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_grey"
            android:layout_height="wrap_content"
            android:text="비공개"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="에세이를 공개하고 많은 사람과 나눠보세요"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="8dp"
        android:background="@drawable/border_underline"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_book_cover"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:background="@drawable/empty_background"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/book_jieun" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="김지은입니다"
                ></TextView>




            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="김지은"
                android:textSize="13sp"
                ></TextView>
            <TextView
                android:id="@+id/tv_book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="봄알람"
                android:textSize="13sp"
                ></TextView>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/myBlack"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:background="@null"
            android:textSize="15sp"
            android:hint="50자 내외로 적어주세요 "/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"

            android:textColor="@color/myBlack"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textSize="15sp"
            android:gravity="top"
            android:background="@null"
            android:hint="에세이를 적어주세요"/>

    </LinearLayout>

</LinearLayout>