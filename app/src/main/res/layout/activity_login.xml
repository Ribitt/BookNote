<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@color/yellowGreen">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="200dp"
           android:layout_marginBottom="100dp"
           android:layout_marginTop="80dp"
           android:src="@drawable/logo"></ImageView>

       <!--    -->
       <!--    <TextView-->
       <!--        android:layout_width="match_parent"-->
       <!--        android:layout_height="wrap_content"-->
       <!--        android:text="로그인"-->
       <!--        android:layout_marginBottom="20dp"-->
       <!--        android:gravity="center"-->
       <!--        android:textStyle="bold"-->
       <!--        android:textSize="30sp">-->
       <!--        -->
       <!--    </TextView>-->

       <!--    이메일 -->
       <LinearLayout
           android:layout_marginBottom="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginEnd="15dp"
           android:gravity="center">

           <TextView
               android:textSize="20sp"
               android:layout_width="90dp"
               android:layout_height="wrap_content"
               android:textColor="@color/green"
               android:textStyle="bold"
               android:text="이메일"></TextView>
           <EditText
               android:id="@+id/et_login_email"
               android:textSize="20sp"
               android:paddingLeft="5dp"
               android:background="@drawable/no_line_white"
               android:layout_width="250dp"
               android:layout_height="wrap_content">
           </EditText>
       </LinearLayout>
       <!--    이메일 -->
       <TextView
           android:id="@+id/tv_login_warningNoEmail"
           android:layout_marginBottom="15dp"
           android:layout_marginLeft="130dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="존재하지 않는 이메일 주소입니다."
           android:textColor="@color/myRed"
           android:visibility="invisible"></TextView>


       <!--    비밀번호-->
       <LinearLayout
           android:layout_marginEnd="15dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <TextView
               android:textSize="20sp"
               android:layout_width="90dp"
               android:layout_height="wrap_content"
               android:textColor="@color/green"
               android:textStyle="bold"
               android:text="비밀번호"></TextView>
           <EditText
               android:id="@+id/et_login_password"
               android:textSize="20sp"
               android:paddingLeft="5dp"
               android:background="@drawable/no_line_white"
               android:layout_width="250dp"
               android:inputType="textPassword"
               android:layout_height="wrap_content">
           </EditText>
       </LinearLayout>

       <!--    비밀번호-->

       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="370dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="right">
           <CheckBox
               android:id="@+id/checkbox_autoLogin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:checked="false"
               android:buttonTint="@color/green"
               android:shadowColor="@color/green"

               ></CheckBox>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="자동 로그인"
               android:textColor="@color/green"
               android:textSize="16sp"
               android:textStyle="bold"></TextView>
       </LinearLayout>



       <!--    버튼-->
       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">


           <Button
               android:id="@+id/btn_login_login"
               android:background="@drawable/button_green"
               android:textColor="#ffffff"
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:layout_marginRight="10dp"
               android:textStyle="bold"
               android:textSize="17sp"
               android:text="로그인">

           </Button>



       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/btn_login_signUp"
               android:layout_weight="3"
               android:background="@drawable/empty_background"
               android:textColor="@color/green"
               android:layout_width="70dp"
               android:layout_height="40dp"
               android:gravity="right"
               android:textSize="17sp"
               android:textStyle="bold"
               android:text="회원가입">

           </Button>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="|"
               android:gravity="center"
               android:layout_weight="1"></TextView>

           <Button
               android:id="@+id/btn_login_searchPW"
               android:layout_weight="3"
               android:background="@drawable/empty_background"
               android:textColor="@color/green"
               android:gravity="left"
               android:layout_marginLeft="5dp"
               android:layout_width="70dp"
               android:layout_height="40dp"
               android:textSize="17sp"
               android:textStyle="bold"
               android:text="비밀번호 찾기">

           </Button>
       </LinearLayout>

   </LinearLayout>




    <!--    비밀번호-->
</ScrollView>