<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBook">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/imageV_addBook_addBookCover"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"


        android:background="@drawable/border_round_whole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_toolbar" />

    <TextView
        android:id="@+id/tv_addBookCover"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="이미지 추가"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/activity_addBook_bookDetail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="@+id/imageV_addBook_addBookCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/imageV_addBook_addBookCover"
        app:layout_constraintTop_toTopOf="@+id/imageV_addBook_addBookCover">

<!--        책 제목-->
        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/myBlack"
            android:text="제목">

        </TextView>

            <EditText

            android:id="@+id/et_addBook_title"
            android:background="@drawable/underline_green"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:hint="" />


    </LinearLayout>

<!--        책 제목 끝-->

<!--        저자-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/myBlack"
                android:text="저자">

            </TextView>

            <EditText
                android:id="@+id/et_addBook_author"
                android:background="@drawable/underline_green"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:hint="" />

        </LinearLayout>
<!--저자 끝-->

<!--전체 페이지 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/myBlack"
                android:text="페이지 수">

            </TextView>
            <EditText
                android:id="@+id/et_addBook_page"
                android:background="@drawable/underline_green"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="4"
                android:hint=""/>

        </LinearLayout>

<!--        전체 페이지 끝-->

<!--        출판사 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/myBlack"
                android:text="출판사">

            </TextView>

            <EditText
                android:id="@+id/et_addBook_publisher"
                android:background="@drawable/underline_green"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:hint=""/>

        </LinearLayout>

<!--        출판사 끝-->


    </LinearLayout>



<LinearLayout
    android:id="@+id/choose_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="25dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/activity_addBook_bookDetail">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="독서 상태"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/myBlack"
        ></TextView>

    <Spinner
        android:id="@+id/spinner_addBook"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:layout_height="40dp"
        android:entries="@array/reading_status"
        android:gravity="center" />


</LinearLayout>



