<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/border_underline"
    android:gravity="center_vertical"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/imageV_search_bookCover"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/empty_background"
        android:padding="2dp"
        android:scaleType="fitCenter"

        app:srcCompat="@drawable/ic_book" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical"
       >



        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="김지은입니다"
            android:textStyle="bold"
            android:textSize="16sp"

            ></TextView>



        <TextView
            android:id="@+id/tv_search_author"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginLeft="3dp"
            android:text="작가이름"

            ></TextView>

        <TextView
            android:id="@+id/tv_search_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:maxLines="2"

            android:text="출판사"

            ></TextView>





    </LinearLayout>

    <Button
        android:id="@+id/btn_search_addBook"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/button_yello"

        android:text="책 추가"/>


</LinearLayout>