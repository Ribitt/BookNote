    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookLog_Notes">


    <!--    컨텐츠 레이아웃-->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="@color/grey"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bookCoverImg"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/book_crazylady" />

            <LinearLayout
                android:id="@+id/bookDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_bookLog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="책 제목" />

                <TextView
                    android:id="@+id/tv_bookLog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="저자" />


                <TextView
                    android:id="@+id/tv_bookLog_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="출판사" />

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="읽기 시작한 달" />


                <ProgressBar
                    android:id="@+id/progressBar_bookLog"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/startDate"
                    android:max="367"
                    android:progress="0" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bookLog_progress_readPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / " />

                    <TextView
                        android:id="@+id/tv_bookLog_bookPages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="367" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" pages" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/align"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_toBookLogPages"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:background="@drawable/border_non_selected"
                android:gravity="center"
                android:text="페이지 기록"
                android:textSize="14sp"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"



                android:background="@drawable/border_selected"
                android:gravity="center"
                android:text="독서 노트"
                ></TextView>

        </LinearLayout>




<!--        하단부 내용 컨텐츠 레이아웃 -->


        <LinearLayout
            android:id="@+id/layout_wrapContents"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_without_top"
            android:padding="10dp">


            <!--            검색 & 정렬-->
            <LinearLayout
                android:id="@+id/layout_bookDetail_searchAndAlign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/searchInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/align"

                    android:layout_toLeftOf="@id/searchBtn"

                    android:hint="검색어를 입력하세요."
                    android:text="" />

                <ImageButton
                    android:id="@+id/searchBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/align"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/empty_background"

                    app:srcCompat="@drawable/ic_search_24px" />

                <Button
                    android:id="@+id/byPage"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:text="페이지 순"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    />

                <Button
                    android:id="@+id/byColor"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#ffffff"
                    android:text="색상 순"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_max="100dp"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constrainedHeight="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
