            android:layout_width="40dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DFDBDB"
            android:text="에세이" />

        <Button
            android:id="@+id/btn_to_stat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

