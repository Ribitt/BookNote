<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookLog_Notes">


    <!--    컨텐츠 레이아웃-->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



<!--        삳단 책 상세 정보-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:background="@color/grey"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bookCoverImg"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/book_crazylady" />

            <LinearLayout
                android:paddingTop="5dp"
                android:id="@+id/bookDetailLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_bookLog_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:text="책 제목" />

                <TextView
                    android:id="@+id/tv_bookLog_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="저자" />


                <TextView
                    android:id="@+id/tv_bookLog_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="출판사" />




            </LinearLayout>


        </LinearLayout>
        <!--        삳단 책 상세 정보 끝-->

<!--        탭메뉴-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서 노트" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이지 기록" />

            <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서평" />


        </com.google.android.material.tabs.TabLayout>

        <!--        탭메뉴 끝-->


        <!--        뷰페이저 -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
         >

        </androidx.viewpager.widget.ViewPager>
<!--        뷰페이저 끝-->



        </LinearLayout>




