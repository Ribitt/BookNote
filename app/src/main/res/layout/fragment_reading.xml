<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_reading"
    android:padding="10dp">

    <!-- TODO: Update blank fragment layout -->

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_reading"
        android:scrollbars="vertical"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@color/myYellow"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="책장이 비어있습니다. +버튼을 눌러 책을 추가해보세요"/>


    <Button
        android:id="@+id/btn_addBook"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_yello"
        android:layout_gravity="right|bottom"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="60dp"
        android:text="+"
        android:textSize="20sp"
        />



</FrameLayout>