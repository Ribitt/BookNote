<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBook">


    <Button
        android:id="@+id/btn_addBook_addBookCover"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/grey"

        android:text="이미지 추가"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/activity_addBook_bookDetail"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="@+id/btn_addBook_addBookCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/btn_addBook_addBookCover"
        app:layout_constraintTop_toTopOf="@+id/btn_addBook_addBookCover">


        <EditText

            android:id="@+id/et_addBook_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="책 제목"/>
        <EditText
            android:id="@+id/et_addBook_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="저자"/>

        <EditText
            android:id="@+id/et_addBook_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="출판사"/>
        <EditText
            android:id="@+id/et_addBook_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:hint="페이지 수"/>



    </LinearLayout>


    <TextView
        android:id="@+id/choose_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="독서 상태를 선택해주세요"
        android:visibility="invisible"
        android:textColor="@color/myBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_addBook_bookDetail"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_status">

        <Button
            android:id="@+id/btn_addBook_status_read"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/underline_green"
            android:textColor="@color/border"
            android:text="읽은 책">

        </Button>

        <Button
            android:id="@+id/btn_addBook_status_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/underline_green_selected"
            android:text="읽는 중인 책"
            android:textColor="@color/green">

        </Button>

        <Button
            android:id="@+id/btn_addBook_status_interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/underline_green"
            android:text="관심 책"
            android:textColor="@color/border">

        </Button>


    </LinearLayout>

    <!--관심 책에 보여줄 내용-->
    <EditText
        android:id="@+id/et_addBook_interested_memo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"

        android:hint="책에 대한 간단한 메모를 입력하세요."
        android:background="@drawable/border_round_whole"
        android:visibility="invisible"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />


    <!--관심 책에 보여줄 내용 끝-->


    <!--    읽는 중인 책에 보여줄 내용 -->

    <LinearLayout
        android:id="@+id/layout_addBook_reading_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"



        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="마지막으로 읽은 날"
            android:textColor="@color/myBlack"
            />

        <TextView
            android:id="@+id/tv_addBook_reading_lastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="2020.08.01"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_addBook_reading_readPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"



        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_addBook_reading_date" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="지금까지 읽은 페이지"
            android:textColor="@color/myBlack"
            />

        <EditText
            android:id="@+id/et_addBook_reading_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="###"></EditText>
    </LinearLayout>

    <!--    읽는 중인 책에 보여줄 내용 끝 -->

    <!--    읽은 책에 보여줄 내용-->


    <LinearLayout
        android:id="@+id/layout_addBook_read_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:visibility="invisible"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="다 읽은 날"
            android:textColor="@color/myBlack"
            />

        <TextView
            android:id="@+id/tv_addBook_read_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="2020.08.01"></TextView>
    </LinearLayout>




    <RatingBar
        android:id="@+id/rating_addBook_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"
        android:isIndicator="false"

        android:numStars="5"
        android:stepSize="0.5"
        android:rating="3.5"

        style="@style/Widget.AppCompat.RatingBar.Indicator"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_addBook_read_date" />

    <EditText
        android:id="@+id/et_addBook_read_ALineReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"

        android:hint="한줄 평을 입력하세요"
        android:background="@drawable/border_round_whole"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_addBook_read" />

    <!--    읽은 책에 보여줄 내용-->



    <Button
        android:id="@+id/btn_addBook_cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="208dp"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@+id/btn_addBook_done"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <Button
        android:id="@+id/btn_addBook_done"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="48dp"
        android:text="수정하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

</androidx.constraintlayout.widget.ConstraintLayout>