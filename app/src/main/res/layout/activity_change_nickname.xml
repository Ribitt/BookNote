<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNickname"
     android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_nicknameNow"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:text="회원님의 현재 닉네임은 ~~입니다"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_inputNick"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:hint="새 닉네임을 입력하세요"></EditText>

        <Button
            android:id="@+id/btn_checkNick"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_grey"
            android:text="중복 확인"

            android:textColor="@color/green"></Button>

    </LinearLayout>


    <Button
        android:id="@+id/btn_change"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="닉네임 변경"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_yellowgreen"/>

</LinearLayout>