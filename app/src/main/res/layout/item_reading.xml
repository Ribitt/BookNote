<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageButton
        android:id="@+id/btn_readingD_bookcover"
        android:layout_width="90dp"
        android:layout_height="120dp"

        android:background="@drawable/empty_background"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/book_jieun" />

    <TextView
        android:id="@+id/tv_readingD_bookTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="김지은입니다"

        android:textAlignment="center"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/btn_readingD_bookcover"
        app:layout_constraintStart_toStartOf="@+id/btn_readingD_bookcover"
        app:layout_constraintTop_toBottomOf="@+id/btn_readingD_bookcover"></TextView>


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"


        app:layout_constraintTop_toBottomOf="@id/tv_readingD_bookTitle"
        app:layout_constraintEnd_toEndOf="@+id/btn_readingD_bookcover"
        app:layout_constraintStart_toStartOf="@+id/btn_readingD_bookcover">

        <ImageButton
            android:id="@+id/btn_reading_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/empty_background"
            android:src="@drawable/ic_edit_24px"
            android:tint="@color/myBlack">

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_reading_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/empty_background"
            android:src="@drawable/ic_delete_24px"
            android:tint="@color/myBlack" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>